<h1>Here's Your Current List of Tasted/Wishlist Wines</h1>



<div class="container">
    <h1 class="text-center">Search Results</h1>
    <hr />
    <table class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Wine</th>
                <th scope="col">Vintage</th>
                <th scope="col">GWS Score</th>
              </tr>
            </thead>
            <tbody>
                <% let rank = 1 %>
                <% userlist.forEach((w, i) => { %>
                    <tr>
                        <th scope="row"><%= ++i %></th>
                        <td><%= w.wine %></td>
                        <td><%= w.vintage %></td>
                        <td><%= w.score %></td>
                        <td>
                            <form>
                                <input type="hidden" id="wine<%= i %>" name="wine" value="<%= w.wine %>">
                                <input type="hidden" id="appellation<%= i %>" name="appellation" value="<%= w.appellation %>">
                                <input type="hidden" id="regions<%= i %>" name="region" value="<%= w.region%>">
                                <input type="hidden" id="country<%= i %>" name="country" value="<%= w.country %>">
                                <input type="hidden" id="vintage<%= i %>" name="vintage" value="<%= w.vintage %>">
                                <input type="hidden" id="score<%= i %>" name="score" value="<%= w.score %>">
                                <input type="hidden" id="tasted<%= i %>" name="tasted" value="<%= w.tasted %>">
                                <input type="hidden" id="wishlist<%= i %>" name="wishlist" value="<%= w.wishlist %>">

                                <% if(w.tasted) { %>
                                    <button type='button' class="tasted btn btn-warning" id="tasBtn<%= i %>">üç∑ Tasted</button>
                                <% } else { %>
                                    <button type='button' class="tasted btn btn-default" id="tasBtn<%= i %>">Mark as Tasted</button>
                                <% } %>

                                <% if(w.wishlist) { %>
                                    <button type='button' class="wishlist btn btn-info" id="wisBtn<%= i %>">ü§ûI wish!</button>
                                <% } else { %>
                                    <button type='button' class="wishlist btn btn-default" id="wisBtn<%= i %>">Mark as Wishlist</button>
                                <% } %>
                                
                                <button type='button' class="delete btn btn-default" id="Btn<%= i %>">Remove from List</button>
                            </form>
                        </td>
                        </tr>
                <% }) %>